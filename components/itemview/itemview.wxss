.item-navigator {
  width: 200rpx;
  margin-right: 20rpx;
  display: inline-block;
}
.item-navigator .item-group {
  width: 100%;
}
.item-group .thumbnail-group {
  width: 100%;
  height: 284rpx;
}
.thumbnail-group .thumbnail {
  width: 100%;
  height: 100%;
}

.item-group .item-title {
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
  text-overflow: ellipsis;
  overflow: hidden; 
  color: #ccc;
  margin-bottom: 20rpx;
}

.rate-group  {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  margin-top: 20rpx;
}
.rate-group image {
  width: 20rpx;
  height: 20rpx;
}